<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/expired">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <stroke android:width="3dp" android:color="#b71c1c" />
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>

    <item android:id="@+id/danger">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <stroke android:width="3dp" android:color="#ff5722" />
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>

    <item android:id="@+id/warning">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <stroke android:width="3dp" android:color="#ffca28" />
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>

    <item android:id="@+id/safe">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <stroke android:width="3dp" android:color="#20D660" />
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>

</layer-list>
