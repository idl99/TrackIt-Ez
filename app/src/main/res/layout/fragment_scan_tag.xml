<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="teamideals.com.trackitez.viewmodels.AddUnitViewModel" />

        <variable
            name="itemName"
            type="String" />

        <variable
            name="expiryDate"
            type="String" />

        <variable
            name="tagsScanned"
            type="int" />

        <variable
            name="tagsToScan"
            type="int" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragmentScanTagView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ui.ScanTag">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@{itemName}"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"Expring on "+expiryDate}'
            android:textAlignment="center"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lines="2"
                android:text='@{String.valueOf(tagsScanned)+"/"+String.valueOf(tagsToScan)+"\nTags Scanned"}'
                android:textAlignment="center"
                android:textSize="22sp" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:progress="@{(tagsScanned*100)/tagsToScan}"
                android:progressDrawable="@drawable/circle_progress" />

        </RelativeLayout>

        <Button
            android:id="@+id/buttonScanTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT" />

    </LinearLayout>
</layout>